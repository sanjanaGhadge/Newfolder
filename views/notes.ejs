<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>keep your notes</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>

    <div class="main w-full min-h-screen bg-yellow-600">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input class="block w-full rounded-md px-5 py-2 outline-none bg-zinc-700" type="text" placeholder="title" name="title" required>
                <textarea class="block mt-3 w-full rounded-md px-5 py-2 resize-none bg-zinc-800" placeholder="your task is" name="details" required></textarea>
                <input class="mt-2 bg-blue-600 px-5 py-2 rounded-md" type="submit" value="create task">
            </form>
        </div>

        <div class="tasks flex gap-3 p-10">
            <% if (files.length > 0) { %>
                <% files.forEach(function(file) { %>
                    <div class="task w-72 px-3 py-4 rounded-md bg-yellow-800">
                        <h1 class="text-white text-3xl tracking-tighter"><%= file.replace('.txt', '') %></h1>
                       <div class=" mt-3 flex w-full justify-between items-centre ">
                        <a class="text-blue-500 inline-block" href="/read/<%= file %>">read more</a>
                        <a class=" " href="/edit/<%= file %>">edit</a>
                       </div>
                        
                    </div>
                <% }) %>
            <% } else { %>
                <h2 class="text-white">No tasks yet</h2>
            <% } %>
        </div>
    </div>
</body>
</html>
